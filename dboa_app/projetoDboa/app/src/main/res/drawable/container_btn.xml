<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">    <!-- Bottom 15dp Shadow -->
    <item>
        <shape  android:shape="oval"><!--            Button Shadow Color -->
            <padding
                android:bottom="1dp"
                android:top="1dp"
                android:left="5dp"
                android:right="1dp"/>
            <solid android:color="#A86C737E" />
            <corners android:radius="12dp" />
        </shape>
    </item>    <!-- White Top color -->
    <item android:bottom="5dp">
        <shape android:shape="oval">
            <padding
                android:bottom="6dp"
                android:top="10dp"
                android:left="12dp"
                android:right="20dp"/><!--            Button TOP Color -->

            <solid android:color="@color/bluelight" />

            <corners android:radius="7dp" />
        </shape>
    </item>
</layer-list>